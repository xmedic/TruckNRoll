<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@drawable/backrepeat">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/buttonLevel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="1" android:background="@drawable/normal" android:textStyle="bold" android:textSize="16pt"/>

                <Button
                    android:id="@+id/buttonLevel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="2" android:background="@drawable/normal" android:textStyle="bold" android:textSize="16pt"/>

                <Button
                    android:id="@+id/buttonLevel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="3" android:background="@drawable/normal" android:textStyle="bold" android:textSize="16pt"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/buttonLevel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="4" android:background="@drawable/normal" android:textStyle="bold" android:textSize="16pt"/>

                <Button
                    android:id="@+id/buttonLevel5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="5" android:background="@drawable/normal" android:textStyle="bold" android:textSize="16pt"/>

                <Button
                    android:id="@+id/buttonLevel6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/disabled" android:textStyle="bold" android:textSize="16pt" android:textColor="@color/translucent_black"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/levellabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5pt"
            android:text="Level"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30pt"
            android:textStyle="bold" android:shadowDx="0" android:shadowDy="-2" android:shadowRadius="2" android:shadowColor="#000000" android:textColor="#cccccc" android:typeface="normal"/>

    </RelativeLayout>

</LinearLayout>