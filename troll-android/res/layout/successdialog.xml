<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
		    		
            <TextView
                android:id="@+id/successText"
                android:textColor="#06CF1E"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:text="Well done!"
                 android:textSize="18pt" android:visibility="gone"/>

		<RelativeLayout
		    android:id="@+id/relativeLayout1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

		    <ImageView
		        android:id="@+id/successImage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:src="@drawable/successroll" />

		    <Button
		        android:id="@+id/reviewLevel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/successImage"
		        android:layout_centerHorizontal="true"
		        android:background="@color/translucent_black"
		        android:text="Review level"
		        android:textColor="#cccccc"
		        android:textSize="12pt" />

		    <Button
		        android:id="@+id/nextLevel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/reviewLevel"
		        android:layout_centerHorizontal="true"
		        android:background="@color/translucent_black"
		        android:text="Next Level"
		        android:textColor="#cccccc"
		        android:textSize="12pt" />

		    <Button
		        android:id="@+id/mainMenuSuccess"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/nextLevel"
		        android:layout_centerHorizontal="true"
		        android:background="@color/translucent_black"
		        android:text="Main Menu"
		        android:textColor="#cccccc"
		        android:textSize="12pt" />

		</RelativeLayout>

	</LinearLayout>

